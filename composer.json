{
    "name": "somnambulist/read-models",
    "type": "library",
    "description": "A stripped down active-record'ish query layer for fetching data from your database.",
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json":  "*",
        "doctrine/dbal": "~2.11",
        "pagerfanta/pagerfanta": "^3.5",
        "pragmarx/ia-str": "^7.3",
        "somnambulist/attribute-model": "^2.0",
        "somnambulist/collection": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "creof/doctrine2-spatial": "~1.2",
        "doctrine/doctrine-bundle": "~2.0",
        "doctrine/orm": "^2.8",
        "fakerphp/faker": "^1.13",
        "somnambulist/domain": "~4.0",
        "symfony/dotenv": "^5.4",
        "symfony/framework-bundle": "^5.4",
        "symfony/messenger": "^5.4",
        "symfony/phpunit-bridge": "^5.4",
        "symfony/stopwatch": "^5.4",
        "symfony/var-dumper": "^5.4",
        "victorjonsson/markdowndocs": "^1.3",
        "symfony/yaml": "^5.4",
        "vimeo/psalm": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Somnambulist\\Components\\ReadModels\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Components\\ReadModels\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "doctrine/orm": "Use full weight Doctrine for managing persistence and data",
        "doctrine/migrations": "To build schema changes",
        "symfony/http-kernel": "To use the kernel listener, requires >=5.0",
        "somnambulist/read-models-bundle": "Symfony integration for read-models"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
